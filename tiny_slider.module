/**
 * Checks if the provided string is a valid JSON.
 *
 * @return bool
 */
function isValidJson($string) {
  if ($string === "" || $string === "null" || $string === "[]") {
    return FALSE;
  }

  json_decode($string);
  return json_last_error() === JSON_ERROR_NONE;
}
