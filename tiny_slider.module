    'autoplayButtonOutput' => FALSE,
    'autoplayTextStart' => 'start',
    'autoplayTextStop' => 'stop',
    'autoplayHoverPause' => FALSE,
    'autoplayPosition' => 'top',
    'controls' => TRUE,
    'controlsPosition' => 'top',
    'controlsTextPrev' => 'prev',
    'controlsTextNext' => 'next',
    'slideBy' => '1',
    'arrowKeys' => FALSE,
